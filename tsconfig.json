{
  "compilerOptions": {
    "module": "ESNext", // Используем ESM
    "moduleResolution": "node", // Или "nodenext"
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__", "**/*.test.ts", "**/*.spec.ts"]
}